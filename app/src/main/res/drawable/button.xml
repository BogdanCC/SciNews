<?xml version="1.0" encoding="UTF-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorRipple"
    tools:targetApi="LOLLIPOP">
    <item android:id="@+id/mask">
        <shape>
            <solid android:color="@color/colorPrimary"/>
            <padding android:left="@dimen/button_padding_left_right"
                android:top="@dimen/button_padding_top_bottom"
                android:right="@dimen/button_padding_left_right"
                android:bottom="@dimen/button_padding_top_bottom" />
            <corners android:bottomRightRadius="@dimen/button_corner_radius"
                android:bottomLeftRadius="@dimen/button_corner_radius"
                android:topLeftRadius="@dimen/button_corner_radius"
                android:topRightRadius="@dimen/button_corner_radius" />
        </shape>
    </item>
</ripple>
