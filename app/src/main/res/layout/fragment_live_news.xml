<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_view"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_connection"
                android:id="@+id/not_found_image" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_internet"
                android:textSize="@dimen/text_size_headline"
                android:id="@+id/not_found_text"/>
        </LinearLayout>
    </FrameLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:id="@+id/news_progress"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_container_height"
            android:background="@drawable/edit_text_gradient"
            android:padding="@dimen/spacing_small"
            android:id="@+id/search_field">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorIcons"
                android:layout_centerInParent="true">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="@dimen/null_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    tools:text="Search here"
                    android:padding="@dimen/spacing_medium"
                    android:id="@+id/search_box"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/edit_text_placeholder"
                    android:textColorHint="@color/colorSecondaryText"
                    android:textColor="@color/colorSecondaryText"
                    android:textCursorDrawable="@null"/>
                <ImageView
                    android:layout_width="@dimen/null_size"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_search_black"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/search_button"
                    android:tint="@color/colorSecondaryText"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorIcons" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/news_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
